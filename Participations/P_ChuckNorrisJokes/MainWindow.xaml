<Window x:Class="P_ChuckNorrisJokes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:P_ChuckNorrisJokes"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/chuck norris.jpg"/>
        </Grid.Background>
        <ComboBox x:Name="cbo_Categories" HorizontalAlignment="Left" Height="97" Margin="31,76,0,0" VerticalAlignment="Top" Width="252" SelectionChanged="cbo_Categories_SelectionChanged"/>
        <Button x:Name="btnQuote" Content="Get Quote" HorizontalAlignment="Left" Height="117" Margin="512,100,0,0" VerticalAlignment="Top" Width="238"/>
        <Label Content="Categories:" HorizontalAlignment="Left" Height="66" Margin="31,10,0,0" VerticalAlignment="Top" Width="442" FontSize="36"/>

    </Grid>
</Window>
